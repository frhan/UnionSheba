<div class="form-group col-lg-6">
  <label>লিঙ্গঃ</label>
  <%= f.select :gender, Citizen.GENDERS.map { |c| [c[0], c[1]] }, {}, {class: "form-control"} %>
</div>

<div class="form-group col-lg-6">
  <label>বৈবাহিক সম্পর্ক</label>
  <%= f.collection_select :maritial_status_id, MaritialStatus.all, :id, :name_bn, {}, {class: "form-control"} %>
</div>

<div class="form-group col-lg-6">
  <label>ধর্ম:</label>
  <%= f.collection_select :religion_id, Religion.all, :id, :name_bn, {}, {class: "form-control"} %>
</div>

<div class="form-group col-lg-6">
  <label>বাসিন্দা:</label>
  <%= f.collection_select :citizenship_state_id, CitizenshipState.all, :id, :name_bn, {}, {class: "form-control"} %>
</div>

<div class="form-group col-lg-6">
  <label>জম্ম তারিখ:</label>
  <%= f.date_field :dob, "data-provide" => 'datepicker', "data-date-format" => "yyyy-mm-dd", max: Date.today, class: "form-control" %>
</div>

<span class=" col-lg-12 text-center help-block">নাগরিকত্ব নম্বর অথবা জন্ম নিবন্ধন নম্বর যেকোন একটি দিলে হবে</span>

<div class="form-group col-lg-6">
  <label>জাতীয় পরিচয়পত্র নম্বরঃ</label>
  <%= f.text_field :nid, class: "form-control" %>
</div>
<div class="form-group col-lg-6">
  <label>জন্ম নিবন্ধন নম্বরঃ</label>
  <%= f.text_field :birthid, class: "form-control" %>
</div>
