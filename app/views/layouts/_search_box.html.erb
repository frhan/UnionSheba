<div class="form-group">
  <label>From: </label>
</div>

<div class="form-group">
  <label class="sr-only">Start Date</label>
  <%= text_field_tag :start_date, @start_date.strftime('%Y-%m-%d'), "data-provide" => 'datepicker', value: @start_date.strftime('%Y-%m-%d'), "data-date-format" => "yyyy-mm-dd", class: "form-control", placeholder: "Start Date" %>
</div>

<div class="form-group">
  <label>To: </label>
</div>

<div class="form-group">
  <%= label_tag :end_date, nil, class: "sr-only" %>
  <%= text_field_tag :end_date, @end_date.strftime('%Y-%m-%d'), "data-provide" => 'datepicker', value: @end_date.strftime('%Y-%m-%d'), "data-date-format" => "yyyy-mm-dd", class: "form-control", placeholder: "End Date" %>
</div>