<div class="form-group col-lg-12">
  <% if is_warish %>
      <label>মৃত ব্যক্তির নামঃ*</label>
  <% else %>
      <label>নামঃ</label>
  <% end %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group col-lg-6">
  <label>পিতার নাম</label>
  <%= f.text_field :fathers_name, class: "form-control" %>
</div>

<div class="form-group col-lg-6">
  <label>মাতার নাম</label>
  <%= f.text_field :mothers_name, class: "form-control" %>
</div>

<% if should_show_spouse? %>
    <div class="form-group col-lg-6">
      <label>স্বামী/স্ত্রীর নামঃ</label>
      <%= f.text_field :spouse_name, class: "form-control" %>
    </div>
<% end %>

<% if is_warish %>
    <div class="form-group col-lg-6">
      <label for="theme">পিতা জীবিত কিনা: </label>
      <%= f.radio_button :father_alive, true %>
      <%= f.label :father_alive_label, "হ্যাঁ" %>
      <%= f.radio_button :father_alive, false %>
      <%= f.label :father_alive_label, "না" %>
    </div>
    <div class="form-group col-lg-6">
      <label>মাতা জীবিত কিনা: </label>
      <%= f.radio_button :mother_alive, true %>
      <%= f.label :mother_alive_label, "হ্যাঁ" %>
      <%= f.radio_button :mother_alive, false %>
      <%= f.label :mother_alive_label, "না" %>
    </div>
<% end %>

<%= f.hidden_field :lang %>
