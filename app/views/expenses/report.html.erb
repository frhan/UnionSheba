<div class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
  <p id="notice"><%= notice %></p>
  <h2>ব্যয় বিবরণী</h2>

  <%= form_tag(report_expenses_path, class: "form-inline", method: :get) do %>

      <div class="form-group">
        <label class="sr-only" >Start Date</label>
        <%= text_field_tag :start_date, params[:start_date],"data-provide" => 'datepicker',value: params[:start_date], "data-date-format" => "yyyy-mm-dd",class: "form-control", placeholder: "Start Date" %>
      </div>

      <div class="form-group">
        <%= label_tag :end_date,nil,class:"sr-only" %>
        <%= text_field_tag :end_date, params[:end_date],"data-provide" => 'datepicker',value: params[:end_date], "data-date-format" => "yyyy-mm-dd",class: "form-control", placeholder: "End Date" %>
      </div>

      <%= submit_tag :Search, class: "btn btn-primary" %>
  <% end %>
  <div id="results">
    <%= render 'results' %>
  </div>
</div>