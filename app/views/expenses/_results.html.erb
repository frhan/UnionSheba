<%= link_to 'pdf', report_expenses_path(collections: {category_id: get_cat_type },start_date: params[:start_date], end_date: params[:end_date], format: :pdf), class: "btn" %>


<% if @expenses %>
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th>সিরিয়াল নং</th>
        <th>জমার তারিখ</th>
        <th>বাবদ</th>
        <th>চেক তথ্য</th>
        <th>ব্যয়কৃত অর্থ</th>
      </tr>
      </thead>
      <tbody>

      <% @expenses.each do |t| %>
          <tr>
            <td><%= t.serial_no %></td>
            <td><%= formatted_date_time t.created_at %></td>
            <td><%= t.exp_category %></td>
            <td><%= t.bank_info %></td>
            <td><%= t.expense_money %></td>
          </tr>
      <% end %>
      <tr>
        <td>সর্বমোট</td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= @total_sum %></td>
      </tr>
      </tbody>
    </table>
    </tbody>
    </table>
<% end %>

<%= paginate @expenses %>