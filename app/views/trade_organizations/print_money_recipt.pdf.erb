<style>

  body {
    font-size: 18px;
    margin: 0 auto;
    background-color: #ffffff;
  }

  .row {
    padding: 0;
    margin: 0;
  }

  [class*='col-'] {
    padding: 0;
    margin: 0;
  }

  p {
    padding: 0;
    margin: 0;
  }

  .margin-left {
    margin-left: 7px;
  }

  .margin-right {
    margin-right: 5px;
  }

  .margin-top-5 {
    margin-top: 5px;
  }

  #margin-top-50 {
    margin-top: 50px;
  }

  .margin-top-7 {
    margin-top: 7px;
  }

</style>

<div>
  <div class="container">

    <div class="row top-header">
      <div class="col-xs-12 text-center">
        <h2><%= bangla_number @trade_organization.union_no %> নং <%= @trade_organization.union_name_bng %> ইউনিয়ন
          পরিষদ</h2>
        <p class="sub"> ডাকঘরঃ <%= @trade_organization.post_name_bng %>
          উপজেলাঃ <%= @trade_organization.upazila_name_bng %>
          জেলাঃ  <%= @trade_organization.zila_name_bng %></p>
      </div>
    </div>

    <div class="row ">
      <div class="col-xs-12">
        <p class="text-center">ইউপি ফরম-৪</p>
      </div>
    </div>
    <div class="row ">
      <div class="col-xs-12">
        <p class="text-center">[ বিধি ৮ দ্রষ্টব্য ]</p>
      </div>
    </div>
    <div class="row ">
      <div class="col-xs-12">
        <p class="text-center">বিবিধ প্রাপ্তি রশিদ</p>
      </div>
    </div>


    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>ক্রমিক নং</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left"><%= @trade_organization.money_collection_serial_no %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>প্রদানকারীর নাম</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left"><%= @trade_organization.owners_name_bng %></p>
          </div>
        </div>
      </div>
    </div>


    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>প্রদানকারীর ঠিকানা</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left"><%= @trade_organization.address %></p>
          </div>
        </div>
      </div>
    </div>


    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>গৃহীত অর্থ</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left"><%= @trade_organization.license_fee %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>জরিমানা(যদি থাকে)</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left"><%= @trade_organization.fine %></p>
          </div>
        </div>
      </div>
    </div>


    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>সময়কাল</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left"><%= @trade_organization.fiscal_year %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>বাবদ</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left">ট্রেড লাইসেন্স</p>
          </div>
        </div>
      </div>
    </div>


    <div class="row margin-top-5">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-3 trade-label">
            <p>মোট টাকা</p>
          </div>
          <div class="col-xs-9">
            <p class="margin-left"><%= @trade_organization.total_fee %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="row" id="margin-top-50">
      <div class="col-xs-6">
        <div>
          <p>তারিখ: <%= bangla_date Time.now %></p>
        </div>
        <div>
          <p>সময়: <%= bangla_time Time.now %></p>
        </div>
      </div>
      <div class="col-xs-6">
        <div>
          <p class="text-center">আদায়কারীর স্বাক্ষর</p>
        </div>
      </div>
    </div>
  </div>
</div>