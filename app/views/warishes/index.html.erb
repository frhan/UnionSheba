<div class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
  <p id="notice"><%= notice %></p>

  <h1>নাগরিক সমূহ</h1>

  <div class="row">
    <div class="form-group col-md-12">
      <% if can? :create, Warish %>
          <%= link_to 'New', new_warish_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <%= form_tag(warishes_path, method: :get) do %>
        <div class="form-group col-md-10">
          <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "নাগরিক সনদের নম্বরটি প্রবেশ করুন" %>
        </div>
        <div class="form-group col-md-2">
          <%= submit_tag 'খোঁজ করুন', class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= render 'warishes', citizens: @citizens, show_tracking: false, show_citizen_no: true %>
    </div>
  </div>
</div>