<% if warishes %>
    <table class="table table-bordered table-striped">
      <thead>

      <tr>
        <% if show_tracking %>
            <th>Tracking Id</th>
        <% end %>
        <% if show_warish_no %>
            <th>Citizen No</th>
        <% end %>

        <th>NID</th>
        <th>Birth Id</th>
        <th>Name</th>
        <th>Father's Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>

      <% warishes.each do |warish| %>
          <tr>
            <% if show_tracking %>
                <td><%= link_to(warish.tracking_id, warish_path(warish)) %></td>
            <% end %>

            <% if show_warish_no %>
                <td><%= link_to(warish.warish_no, warish_path(warish)) %></td>
            <% end %>

            <% if warish.citizen_basic.present? %>
                <td><%= link_to(warish.citizen_basic.nid, warish_path(warish)) %></td>
                <td><%= link_to(warish.citizen_basic.birthid, warish_path(warish)) %></td>
            <% else %>
                <td></td>
                <td></td>
            <% end %>

            <% if warish.basic_information.present? %>
                <td><%= link_to(warish.basic_information.name, warish_path(warish)) %></td>
                <td><%= link_to(warish.basic_information.fathers_name, warish_path(warish)) %></td>
            <% else %>
                <td></td>
                <td></td>
            <% end %>

            <td>
              <%= link_to('Edit', edit_warish_path(warish)) %>
              <%= link_to('Delete', edit_warish_path(warish)) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate warishes %>
<% end %>
