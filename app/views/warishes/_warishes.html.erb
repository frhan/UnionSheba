<% if citizens %>
    <table class="table table-bordered table-striped">
      <thead>

      <tr>
        <% if show_tracking %>
            <th>Tracking Id</th>
        <% end %>
        <% if show_citizen_no %>
            <th>Citizen No</th>
        <% end %>

        <th>NID</th>
        <th>Birth Id</th>
        <th>Name</th>
        <th>Father's Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>

      <% citizens.each do |citizen| %>
          <tr>
            <% if show_tracking %>
                <td><%= link_to(citizen.tracking_id, citizen_path(citizen)) %></td>
            <% end %>

            <% if show_citizen_no %>
                <td><%= link_to(citizen.citizen_no, citizen_path(citizen)) %></td>
            <% end %>

            <% if citizen.citizen_basic.present? %>
                <td><%= link_to(citizen.citizen_basic.nid, citizen_path(citizen)) %></td>
                <td><%= link_to(citizen.citizen_basic.birthid, citizen_path(citizen)) %></td>
            <% else %>
                <td></td>
                <td></td>
            <% end %>

            <% if citizen.basic_information.present? %>
                <td><%= link_to(citizen.basic_information.name, citizen_path(citizen)) %></td>
                <td><%= link_to(citizen.basic_information.fathers_name, citizen_path(citizen)) %></td>
            <% else %>
                <td></td>
                <td></td>
            <% end %>

            <td>
              <%= link_to('Edit', edit_citizen_path(citizen)) %>
              <%= link_to('Delete', edit_citizen_path(citizen)) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= paginate citizens %>
<% end %>
