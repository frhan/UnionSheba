<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
  <p id="notice"><%= notice %></p>
  <% if @others_collection.present? %>

      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @others_collection.senders_name %></h3>
        </div>
        <div class="panel-body">
          <div class="row">

            <div class=" col-md-9 col-lg-9 ">
              <table class="table table-user-information">
                <tbody>
                <tr>
                  <td>প্রদানকারীর নাম</td>
                  <td><%= @others_collection.senders_name %></td>
                </tr>

                <tr>
                  <td>প্রদানকারীর ঠিকানা</td>
                  <td><%= @others_collection.senders_address %></td>
                </tr>
                <tr>
                  <td>সময়কাল</td>
                  <td><%= @others_collection.time_line %></td>
                </tr>

                <tr>
                  <td>বাবদ</td>
                  <td><%= @others_collection.reason %></td>
                </tr>

                <tr>
                  <td>গৃহীত অর্থ</td>
                  <td><%= @others_collection.fee_bangla %></td>
                </tr>

                <tr>
                  <td>জরিমানা(যদি থাকে)</td>
                  <td><%= @others_collection.fine_bangla %></td>
                </tr>

                <tr>
                  <td>সর্বমোট</td>
                  <td><%= @others_collection.total_bangla %></td>
                </tr>

                </tr>

                </tbody>
              </table>

              <%= link_to 'Download', others_collection_path(@others_collection,format: 'pdf'), class: "btn btn-info btn-default" %>
              <%= link_to 'Back', others_collections_path, class: "btn btn-primary" %>

            </div>
          </div>
        </div>
      </div>
  <% end %>

</div>