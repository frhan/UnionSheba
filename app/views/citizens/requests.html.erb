<div class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
  <p id="notice"><%= notice %></p>

  <h1>নাগরিকত্বের আবেদনকারী</h1>

    <% if @citizens %>
        <table class="table table-bordered table-striped">
          <thead>

          <tr>
            <th>NID</th>
            <th>Birth Id</th>
            <th>Name</th>
            <th>Requested at</th>
            <th>status</th>
          </tr>
          </thead>
          <tbody>

          <% @citizens.each do |citizen| %>
              <tr>
                <td><%= link_to(citizen.nid, edit_citizen_path(citizen)) %></td>
                <td><%= link_to(citizen.birthid,edit_citizen_path(citizen)) %></td>
                <td><%= link_to(citizen.name_in_eng,edit_citizen_path(citizen)) %></td>
                <td><%= citizen.requested_at_formatted %></td>
                <td><%= citizen.status %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% end %>
    </tbody>
  <%= paginate @citizens %>
  </table>
  </div>